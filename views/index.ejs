            <button class="btn btn-outline-success">Sign Up</button>
          </ul>
        </div>
      </div>
    </nav>

    <!-- HERO SECTION -->
    <div class="container hero">
      <div class="row">
        <div class="column col-lg-6 h-text">
          <h1>More than just shorter links</h1>
          <p>
            Build your brandâ€™s recognition and get detailed insights on how your
            links are performing.
          </p>
          <button onclick="myFunction()">Get Started</button>
        </div>
        <div class="column col-lg-6 order-first h-img">
          <img src="images/illustration-working.svg" alt="" />
        </div>
      </div>
    </div>

    <!-- LINKS SEC -->
    <div class="links-features">
      <!-- SHORTEN LINK -->
      <div class="container shorten">
        <form action="/" class="row" method="post">
          <input
            type="text"
            name="input"
            class="column col-12 col-md-6 col-lg-6 form-item"
            placeholder="Shorten a link here..."
            required
          />
          <button
            class="column col-12 col-md-2 col-lg-2 form-item"
            type="submit"
          >
            Shorten It!
          </button>
        </form>
      </div>

      <!-- SHOTERNED LINKS -->
      <% for(var i = 0 ; i<newLink.length; i++) { %>
      <div class="Shortened">
        <div  class="shortened-links">
          <h6 class="original-link"><a href="#"><%= newLink[i].original %></a> </h6>
          <hr>
          <p class="new-link" > <a href="#" class="shortlink"> <%= newLink[i].short%> </a> </p>
          <button type="button" name="button" class="copy">copy</button>
        </div>
      </div>
  <% } %>



      <div class="features">
                <!-- FEATURES SECTION -->
        <h1 class="ad">Advanced Statistics</h1>
        <p class="p1">
          Track how your links are performing across the web with our advanced
          statistics dashboard.
        </p>

        <div class="cards">
          <img src="images/icon-brand-recognition.svg" alt="" />
          <div class="texts">
            <h3>Brand Recognition</h3>
